diff --git a/src/main/java/org/bukkit/UnsafeValues.java b/src/main/java/org/bukkit/UnsafeValues.java
index 739f117a0fd91ae98b5e5a39ae8e23feca0b741d..bd3567e9b0617c19a92090c8ab6baf17a715073a 100644
